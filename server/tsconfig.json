{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",          // Includes all TypeScript files in the `src` folder
    "src/types/**/*.d.ts"   // Includes custom type definitions in the `types` folder
  ]
}
